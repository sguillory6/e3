{
  "duration": 300000,
  "workload": "build-load",
  "threads": [
    {
      "name": "fixed-thread",
      "instance": {
        "name": "2-nodes-fixed",
        "version": "4.11.0",
        "snapshot": "e3-medium",
        "template": "BitbucketDataCenter",
        "properties": [
          "db.schema.lock.maxWait=600",
          "throttle.resource.scm-hosting.strategy=fixed"
        ],
        "parameters": {
          "ClusterNodeMin": "2",
          "ClusterNodeMax": "2",
          "ClusterNodeInstanceType": "c3.2xlarge",
          "FileServerInstanceType": "m4.2xlarge",
          "DBInstanceClass": "db.r3.2xlarge",
          "HomeVolumeType": "Provisioned IOPS",
          "HomeIops": "5000"
        }
      },
      "worker": {
        "name": "1-node-worker-cluster",
        "template": "WorkerCluster",
        "parameters": {
          "ClusterSize": "2"
        }
      },
      "stages": [
        {
          "clients": 300
        },
        {
          "clients": 400
        }
      ]
    },
    {
      "name": "adaptive-75-thread",
      "instance": {
        "name": "2-nodes-adaptive-75",
        "version": "4.11.0",
        "snapshot": "e3-medium",
        "template": "BitbucketDataCenter",
        "properties": [
          "db.schema.lock.maxWait=600",
          "throttle.resource.scm-hosting.adaptive.mem.backstop.enabled=false"
        ],
        "parameters": {
          "ClusterNodeMin": "2",
          "ClusterNodeMax": "2",
          "ClusterNodeInstanceType": "c3.2xlarge",
          "FileServerInstanceType": "m4.2xlarge",
          "DBInstanceClass": "db.r3.2xlarge",
          "HomeVolumeType": "Provisioned IOPS",
          "HomeIops": "5000"
        }
      },
      "worker": {
        "name": "1-node-worker-cluster",
        "template": "WorkerCluster",
        "parameters": {
          "ClusterSize": "2"
        }
      },
      "stages": [
        {
          "clients": 300
        },
        {
          "clients": 400
        }
      ]
    },
    {
      "name": "adaptive-90-thread",
      "instance": {
        "name": "2-nodes-adaptive-90",
        "version": "4.11.0",
        "snapshot": "e3-medium",
        "template": "BitbucketDataCenter",
        "properties": [
          "db.schema.lock.maxWait=600",
          "throttle.resource.scm-hosting.adaptive.cpu.target=0.9",
          "throttle.resource.scm-hosting.adaptive.mem.backstop.enabled=false"
        ],
        "parameters": {
          "ClusterNodeMin": "2",
          "ClusterNodeMax": "2",
          "ClusterNodeInstanceType": "c3.2xlarge",
          "FileServerInstanceType": "m4.2xlarge",
          "DBInstanceClass": "db.r3.2xlarge",
          "HomeVolumeType": "Provisioned IOPS",
          "HomeIops": "5000"
        }
      },
      "worker": {
        "name": "1-node-worker-cluster",
        "template": "WorkerCluster",
        "parameters": {
          "ClusterSize": "2"
        }
      },
      "stages": [
        {
          "clients": 300
        },
        {
          "clients": 400
        }
      ]
    }
  ]
}
